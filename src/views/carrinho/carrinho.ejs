<% include ../partials/header %> 
<% if(bebidas && bebidas.length > 0){ %>
        <table id="cart" class="table table-hover table-condensed">
            <thead>
                <tr>
                    <th style="width:50%">Produtos</th>
                    <th style="width:10%">Preço</th>
                    <th style="width:8%">Quantidade</th>
                    <th style="width:22%" class="text-center">Subtotal</th>
                    <th style="width:10%"></th>
                </tr>
            </thead>
            <tbody>
            <% bebidas.forEach(function(bebida) { %>
                <tr>
                    <td data-th="Produto">
                        <div class="row">
                            <div class="col-sm-2 hidden-xs"><img src="<%= bebida.item.imagem %>" style="width: 72px; height: 72px; alt="..." class="img-responsive"/></div>
                            <div class="col-sm-10">
                                <h4 class="nomargin"><%= bebida.item.titulo %></h4>
                            </div>
                        </div>
                    </td>
                    <td data-th="Preço"><strong><%= bebida.item.preco %>.00 R$</strong></td>
                    <td data-th="Quantidade">
                        <input type="number" class="form-control text-center" value="<%= bebida.quantidade %>">
                    </td>
                    <td data-th="Subtotal" class="text-center"><strong><%= bebida.preco %>.00 R$</strong></td>
                    <td class="actions" data-th="">
                        <a href="/remove-carrinho/<%= bebida.item._id %>"  id="btn-del" type="button" class="btn btn-danger"><span class="glyphicon glyphicon-remove"></span> Remover</a>								
                    </td>
                </tr>
            <% }); %>  
            </tbody>
            <tfoot>
                <tr class="visible-xs">
                    <td class="text-center"><strong><%= precoTotal %>.00 R$</strong></td>
                </tr>
                <tr>
                    <td><a href="/" class="btn btn-warning"> Continuar comprando</a></td>
                    <td colspan="2" class="hidden-xs"></td>
                    <td class="hidden-xs text-center"><strong><%= precoTotal %>.00 R$</strong></td>
                    <td><a href="/checkout" class="btn btn-success btn-block">Finalizar </a></td>
                </tr>
            </tfoot>
        </table>
<% } else { %>
    <h1>Sem bebidas no carrinho</h1>
<% } %>

<% include ../partials/footer %> 