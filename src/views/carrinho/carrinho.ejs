<% include ../partials/header %> 
<% if(bebidas && bebidas.length > 0){ %>
    <div class="row">
        <div class="col-sm-12 col-md-10 col-md-offset-1">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Produto</th>
                        <th>Quantidade</th>
                        <th class="text-center">Preço</th>
                        <th class="text-center">Total</th>
                        <th> </th>
                    </tr>
                </thead>
                <tbody class="bebida-tabela">
                    <% bebidas.forEach(function(bebida) { %>
                        <tr class="bebida-item">
                            <td class="col-sm-8 col-md-6">
                            <div class="media">
                                <a class="thumbnail pull-left" style="margin-right: 10px;" href="#"> <img class="media-object" src="<%= bebida.item.imagem %>" style="width: 72px; height: 72px; "> </a>
                                <div class="media-body">
                                    <h4 class="media-heading"><%= bebida.item.titulo %></h4>
                                    <span>Status: </span><span class="text-success"><strong>Em estoque</strong></span>
                                </div>
                            </div></td>
                            <td class="col-sm-1 col-md-1 text-center"><strong><%= bebida.quantidade %></strong></td>
                            <td class="col-sm-1 col-md-1 text-center"><strong><%= bebida.item.preco %>.00 R$</strong></td>
                            <td class="col-sm-1 col-md-1 text-center"><strong><%= bebida.preco %>.00 R$</strong></td>
                            <td class="col-sm-1 col-md-1">
                                <a href="/remove-carrinho/<%= bebida.item._id %>"  id="btn-del" type="button" class="btn btn-danger"><span class="glyphicon glyphicon-remove"></span> Remover</a>                               
                            </td>
                        </tr>                    
                    <% }); %>             
                    <tr>
                        <td>   </td>
                        <td>   </td>
                        <td>   </td>
                        <td><h5>Subtotal</h5></td>
                        <td class="text-right"><h5><strong><%= precoTotal %>.00 R$</strong></h5></td>
                    </tr>
                    <tr>
                        <td>   </td>
                        <td>   </td>
                        <td>   </td>
                        <td><h5>Entrega</h5></td>
                        <td class="text-right"><h5 class="text-success"><strong>Grátis</strong></h5></td>
                    </tr>
                    <tr>
                        <td>   </td>
                        <td>   </td>
                        <td>   </td>
                        <td><h3>Total</h3></td>
                        <td class="text-right"><h3><strong><%= precoTotal %>.00 R$</strong></h3></td>
                    </tr>
                    <tr>
                        <td>   </td>
                        <td>   </td>
                        <td>   </td>
                        <td>
                        <a href="/" type="button" class="btn btn-default">
                            <span class="glyphicon glyphicon-shopping-cart"></span> Continuar Comprando
                        </a></td>
                        <td>
                        <a href="/checkout" type="button" class="btn btn-success">
                            Finalizar Compra <span class="glyphicon glyphicon-play"></span>
                        </a></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
<% } else { %>
    <h1>Sem bebidas no carrinho</h1>
<% } %>

<% include ../partials/footer %> 